{
    "name": "Tuva EMPI backend dev container",
    "dockerComposeFile": ["../docker-compose.yml"],
    "service": "backend",
    "shutdownAction": "none",
    "workspaceFolder": "/app",
    "customizations": {
        "vscode": {
            "settings": {
                "files.insertFinalNewline": true,
                "files.trimTrailingWhitespace": true
            },
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "charliermarsh.ruff"
            ]
        }
    }
}
